<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE rootasrole [
<!ELEMENT rootasrole (roles)>
<!ELEMENT roles (role*)>
<!ELEMENT role (user*,group*,commands*)>
<!ATTLIST role name ID #REQUIRED bounding (restrict|allow) "restrict" priority CDATA "1" root (restrict|allow) "restrict" env-keep CDATA #IMPLIED>
<!ELEMENT user EMPTY>
<!ATTLIST user name CDATA #REQUIRED>
<!ELEMENT group EMPTY>
<!ATTLIST group names CDATA #REQUIRED>
<!ELEMENT commands (command*)>
<!ATTLIST commands capabilities CDATA #IMPLIED>
<!ELEMENT command (#PCDATA)>
]>
<rootasrole>
	<roles>
		<role name="root">
			<user name="ROOTADMINISTRATOR"/>
			<commands capabilities="all"/>
		</role>

